<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rob.finalprojectmobile">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewGameActivity"
            android:label="@string/title_activity_new_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewGameMenu"
            android:label="@string/title_activity_new_game_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoadGameMenu"
            android:label="@string/title_activity_load_game_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StatPage"
            android:label="@string/title_activity_stat_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Fight"
            android:label="@string/title_activity_fight"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mainScreen"
            android:label="@string/title_activity_main_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mobMaker"
            android:label="@string/title_activity_mob_maker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCharacterActivity"
            android:label="@string/title_activity_add_character"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
